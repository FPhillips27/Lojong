  javascript:function theFourReminders (){document.body.innerHTML=document.body.innerHTML.replace(/The Four Reminders/gi, "<span class='getinfo infotip'>The Four Reminders<span class='infotiptext'> Contemplations about: rebirth, impermanence, karma, and samsara.<br><a href='https://en.wikipedia.org/wiki/Ng%C3%B6ndro#Outer_preliminaries' target='_blank'>Learn more</a></span></span>" );return;}; theFourReminders();
