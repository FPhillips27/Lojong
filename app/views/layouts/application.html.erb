  javascript:function Tonglen (){document.body.innerHTML=document.body.innerHTML.replace(/Tonglen/gi, "<span class='getinfo infotip'>Tonglen<span class='infotiptext'>A training in altruism from Tibetan Buddhism. It is best done with the assistance of a teacher.<br><a href='https://en.wikipedia.org/wiki/Tonglen' target='_blank'>Learn more</a></span></span>" );return;}; Tonglen();
