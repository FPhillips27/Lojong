  javascript:function sangha (){document.body.innerHTML=document.body.innerHTML.replace(/sangha/gi, "<span class='getinfo infotip'>sangha<span class='infotiptext'> The Buddhist community <br><a href='https://en.wikipedia.org/wiki/Sangha' target='_blank'>Learn more</a></span></span>" );return;}; sangha();
</script>

