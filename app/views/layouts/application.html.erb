  javascript:function bodhi (){document.body.innerHTML=document.body.innerHTML.replace(/bodhi/gi, "<span class='getinfo infotip'>bodhi<span class='infotiptext'>Translated as Awakening<br><a href='https://en.wikipedia.org/wiki/Bodhi' target='_blank'>Learn more</a></span></span>" );return;}; bodhi();
